includes:
    - vendor/phpstan/phpstan/conf/bleedingEdge.neon

parameters:
    level: 8
    paths:
        - src
        - tests

    reportUnmatchedIgnoredErrors: false

    ignoreErrors:
        - '#Call to an undefined method DOMNode.#'
    parallel:
        jobSize: 5
    tmpDir:
        var/phpstan
